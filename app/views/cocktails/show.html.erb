
<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %>
<h3><%= dose.ingredient.name %></h3>
<p><%= dose.description %></p>

<%= link_to "Delete this ingredient", dose_path(dose), :method => :delete, :confirm => "Are you sure ?"%>

<% end %>

<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail[:id])%>
<%= link_to "Back",  cocktails_path %>
